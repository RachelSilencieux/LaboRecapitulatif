<Window x:Class="IdeaManager.UI.Views.MenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdeaManager.UI.Views"
        mc:Ignorable="d"
        Title="MenuView" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="2">
            <StackPanel Margin="10">
                <Label Content="Menu" FontSize="16" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                <Button Content="Idea Form" Width="150" Margin="5"  Height="30" Click="IdeaForm_Click"/>
                <Button Content="Idea List" Width="150" Margin="5" Height="30" Click="IdeaList_Click"/>
            </StackPanel>
        </DockPanel>
        
    </Grid>
</Window>
